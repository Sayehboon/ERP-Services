{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Error",
      "Microsoft.EntityFrameworkCore": "Error",
      "Microsoft.EntityFrameworkCore.Database.Command": "None",
      "System": "Error"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=YOUR_PRODUCTION_SERVER;Database=Dinawin.Erp.Production;User Id=YOUR_DB_USER;Password=YOUR_DB_PASSWORD;MultipleActiveResultSets=true;TrustServerCertificate=true;Connection Timeout=30;Command Timeout=60;"
  },
  "AllowedHosts": "yourdomain.com,www.yourdomain.com",
  "ApplicationSettings": {
    "DefaultCurrency": "IRR",
    "DefaultLanguage": "fa-IR",
    "DefaultTimezone": "Asia/Tehran",
    "ItemsPerPage": 25,
    "MaxFileUploadSize": 52428800,
    "SupportedLanguages": ["fa-IR", "en-US"],
    "SupportedCurrencies": ["IRR", "USD", "EUR"],
    "EnableSwagger": false,
    "EnableDetailedErrors": false
  },
  "Security": {
    "TokenExpiration": 1800,
    "RefreshTokenExpiration": 86400,
    "PasswordRequireDigit": true,
    "PasswordRequiredLength": 12,
    "PasswordRequireNonAlphanumeric": true,
    "PasswordRequireUppercase": true,
    "PasswordRequireLowercase": true,
    "MaxFailedAccessAttempts": 3,
    "DefaultLockoutTimeSpan": 1800,
    "RequireHttps": true,
    "EnableCors": false
  },
  "Performance": {
    "EnableResponseCompression": true,
    "EnableResponseCaching": true,
    "CacheExpirationMinutes": 60,
    "MaxConcurrentRequests": 100
  },
  "Monitoring": {
    "EnableHealthChecks": true,
    "EnableMetrics": true,
    "LogSlowQueries": true,
    "SlowQueryThresholdMs": 1000
  }
}
